<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/hillford"
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            android:contentDescription="TODO"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="50sp"
            android:textColor="@color/colorPrimary" android:textStyle="bold|italic"
            android:fontFamily="sans-serif" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:text="@string/app_name"/>
</android.support.constraint.ConstraintLayout>